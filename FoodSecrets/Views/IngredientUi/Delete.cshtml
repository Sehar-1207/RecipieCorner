@model IngredientDto
@{
    ViewData["Title"] = "Delete Ingredient";
}

<h2>Delete Ingredient</h2>

<h4>Are you sure you want to delete this ingredient?</h4>

<div>
    <h5>@Model.Name</h5>
    <dl class="row">
        <dt class="col-sm-2">Quantity</dt>
        <dd class="col-sm-10">@Model.Quantity</dd>

        <dt class="col-sm-2">Recipe ID</dt>
        <dd class="col-sm-10">@Model.RecipeId</dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
