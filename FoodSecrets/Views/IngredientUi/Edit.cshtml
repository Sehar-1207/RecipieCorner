@model IngredientDto
@{
    ViewData["Title"] = "Edit Ingredient";
    Layout = "~/Views/Shared/_FormLayout.cshtml";
}

<style>
    /* Card container and page title */
    .page-container {
        max-width: 850px;
        margin: 2rem auto;
    }

    .page-title {
        color: #ffce67; /* Blue for Edit */
        font-weight: 700;
        margin-bottom: 1rem;
    }

    /* Card styling to match Delete card */
    /* Card styling to match Delete card */
    .edit-card {
        background-color: #fff;
        border-radius: 12px;
        /* Darker blackish shadow */
        box-shadow: 0 6px 20px rgba(0, 0, 0, 0.25);
        border: none;
        border-top: 4px solid #ffce67; /* Top accent */
    }


    .card-body-custom {
        padding: 3rem;
    }

    /* Form labels and inputs */
    .form-label-custom {
        color: #495057;
        font-weight: 600;
        display: block;
        margin-bottom: 0.5rem;
    }

    .form-control-custom {
        padding: 0.75rem 1rem;
        font-size: 1rem;
        border-radius: 8px;
        border: 1px solid #ced4da;
        width: 100%;
    }

        .form-control-custom:focus {
            border-color: #4a90e2;
            box-shadow: 0 0 0 0.25rem rgba(74, 144, 226, 0.25);
        }

    /* Footer and buttons */
    .card-actions-footer {
        padding: 1.5rem 3rem;
        border-top: 1px solid #f1f1f1;
        background-color: transparent;
    }

    .btn-custom {
        padding: 0.6rem 2.2rem;
        border-radius: 8px;
        font-weight: 600;
        font-size: 1rem;
        border: none;
        color: white;
    }

    .btn-save-custom {
        background-color: #ffce67; /* Blue save button */
    }

        .btn-save-custom:hover {
            background-color: #d39513;
        }

</style>

<div class="container page-container">

    <!-- Page Header -->
    <h2 class="page-title">Edit Ingredient</h2>

    <!-- Edit Card -->
    <div class="edit-card">
        <form asp-action="Edit" method="post">
            <div class="card-body card-body-custom">
                <input type="hidden" asp-for="Id" />

                <div class="mb-4">
                    <label asp-for="Name" class="form-label-custom">Name</label>
                    <input asp-for="Name" class="form-control form-control-custom" placeholder="Enter ingredient name" />
                    <span asp-validation-for="Name" class="text-danger d-block mt-1"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="Quantity" class="form-label-custom">Quantity</label>
                    <input asp-for="Quantity" class="form-control form-control-custom" placeholder="Enter quantity" />
                    <span asp-validation-for="Quantity" class="text-danger d-block mt-1"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="RecipeId" class="form-label-custom">Recipe ID</label>
                    <input asp-for="RecipeId" class="form-control form-control-custom" placeholder="Enter recipe ID" />
                    <span asp-validation-for="RecipeId" class="text-danger d-block mt-1"></span>
                </div>
            </div>

            <div class="card-actions-footer d-flex justify-content-center gap-3">
                <button type="submit" class="btn btn-custom btn-save-custom">Save</button>
                <a asp-action="Index" class="btn btn-custom btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
