@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor
@{
    var userName = HttpContextAccessor.HttpContext?.Session.GetString("UserName") ?? "Guest";
    var userImage = HttpContextAccessor.HttpContext?.Session.GetString("UserImage") ?? "/Images/student-avatar.jpg";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Recipe Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
    <link href="~/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/dashboard.css" rel="stylesheet" />

</head>
<body>
    <nav class="sidebar bg-primary">
        <div class="user-profile">
            <img src="@userImage" alt="User Image" />
            <h5>@userName</h5>
        </div>
        <ul class="sidebar-nav">
            <li>
                <a asp-controller="RecipeUi" asp-action="Index" class="@(ViewContext.RouteData.Values["action"].ToString() == "Index" && ViewContext.RouteData.Values["controller"].ToString() == "RecipeUi" ? "active" : "")">
                    <i class="fas fa-fw fa-utensils"></i> Recipes
                </a>
            </li>
            <li>
                <a asp-controller="IngredientUi" asp-action="Index" class="@(ViewContext.RouteData.Values["controller"].ToString() == "IngredientUi" ? "active" : "")">
                    <i class="fas fa-fw fa-carrot"></i> Ingredients
                </a>
            </li>
            <li>
                <a asp-controller="InstructionUi" asp-action="Index" class="@(ViewContext.RouteData.Values["controller"].ToString() == "InstructionUi" ? "active" : "")">
                    <i class="fas fa-fw fa-list-check"></i> Instructions
                </a>
            </li>
            <li>
                <a asp-controller="RatingUi" asp-action="Index" class="@(ViewContext.RouteData.Values["controller"].ToString() == "RatingUi" ? "active" : "")">
                    <i class="fas fa-fw fa-star"></i> Ratings
                </a>
            </li>
            <div class="sidebar-bottom-links">
            <li>
                <a href="#"><i class="fas fa-fw fa-cog"></i> Settings</a>
            </li>
            <li>
                <form asp-controller="AuthAccount" asp-action="Logout" method="post">
                    <button type="submit">
                        <span><i class="fas fa-fw fa-sign-out-alt"></i> Logout</span>
                    </button>
                </form>
            </li>
            </div>
        </ul>
    </nav>

    <!-- FIX: Removed the specific page structure from the layout file -->
    <main class="content-area">
        @RenderBody()
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>