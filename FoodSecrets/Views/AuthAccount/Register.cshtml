@model RecipeCorner.Dtos.RegisterDto

@{
    ViewData["Title"] = "Create an Account";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<style>
    body {
        margin: 0;
        padding: 0;
        background-color: #f0f2f5;
    }

    .card-container {
        display: flex;
        align-items: center;
        justify-content: center;
        min-height: 78vh;
    }

    .card.shadow-lg {
        border: none;
        border-radius: 1rem;
    }

    .btn-primary {
        background-color: #039bbb;
        transition: transform 0.2s ease;
        border: none;
    }

    .btn-primary:hover {
            background-color: #01839e;
            transform: translateY(-1px);
    }

    .textcol{
        color: #039bbb;
    }

</style>

<div class="container card-container mt-3">
    <div class="col-lg-11 col-xl-10">
        <div class="card shadow-lg">
            <div class="row g-0">

                <!-- Column 1: Registration Form -->
                <div class="col-md-6">
                    <div class="card-body p-3 p-md-5">
                        <h2 class="fw-bold mb-2 textcol">Create an Account</h2>
                        <p class="text-muted mb-4">Sign up to get started!</p>

                        @if (TempData["Message"] != null)
                        {
                            <div class="alert alert-success">@TempData["Message"]</div>
                        }

                        <form asp-action="Register" asp-controller="AuthAccount" method="post" enctype="multipart/form-data">
                            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                            <div class="form-group mb-3">
                                <label asp-for="FullName" class="form-label fw-semibold"></label>
                                <input asp-for="FullName" class="form-control" placeholder="John Doe" />
                                <span asp-validation-for="FullName" class="text-danger"></span>
                            </div>

                            <div class="form-group mb-3">
                                <label asp-for="Email" class="form-label fw-semibold"></label>
                                <input asp-for="Email" class="form-control" placeholder="name@example.com" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>

                            <div class="form-group mb-3">
                                <label asp-for="Password" class="form-label fw-semibold"></label>
                                <input asp-for="Password" type="password" class="form-control" placeholder="••••••••" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>

                            <div class="form-group mb-4">
                                <label asp-for="ProfileImage" class="form-label fw-semibold">Profile Image <small>(optional)</small></label>
                                <input asp-for="ProfileImage" type="file" class="form-control" />
                                <span asp-validation-for="ProfileImage" class="text-danger"></span>
                            </div>

                            <div class="d-grid">
                                <button type="submit" class="btn btn-primary btn-lg">Register</button>
                            </div>

                            <hr class="my-4">

                            <div class="text-center">
                                <p class="mb-0 text-info">
                                    Already have an account?
                                    <a asp-action="Login" asp-controller="AuthAccount" class="fw-bold text-decoration-none">Log In</a>
                                </p>
                            </div>
                        </form>
                    </div>
                </div>

                <!-- Column 2: Image -->
                <!-- Column 2: Image -->
                <div class="col-md-6 d-none d-md-flex justify-content-center align-items-center illustration-panel">
                    <img src="https://cdni.iconscout.com/illustration/premium/thumb/account-sign-up-7964201-6381811.png"
                         alt="Registration Illustration"
                         class="illustration-img" />
                </div>


            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
