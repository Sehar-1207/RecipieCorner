@model RecipeDto
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_FormLayout.cshtml";
}

<div class="row justify-content-center m-1">
    <div class="col-md-10 col-lg-8">
        <div class="card shadow-lg border-0 rounded-3">
            <div class="card-header bg-danger text-white text-center">
                <h4 class="mb-0">Delete Recipe</h4>
            </div>
            <div class="card-body p-3">
                <p class="text-center text-body-emphasis mb-4">Are you sure you want to delete this recipe?</p>

                <dl class="row">
                    <dt class="col-sm-3 fw-semibold">Name</dt>
                    <dd class="col-sm-9">@Model.Name</dd>

                    <dt class="col-sm-3 fw-semibold">Description</dt>
                    <dd class="col-sm-9">@Model.Description</dd>

                    <dt class="col-sm-3 fw-semibold">Cuisine</dt>
                    <dd class="col-sm-9">@Model.Cusine</dd>

                    <dt class="col-sm-3 fw-semibold">Meal Type</dt>
                    <dd class="col-sm-9">@Model.MealType</dd>

                    <dt class="col-sm-3 fw-semibold">Estimated Cooking Time</dt>
                    <dd class="col-sm-9">@Model.AstimatedCookingTime.ToString("hh\\:mm") mins</dd>

                    <dt class="col-sm-3 fw-semibold">Image</dt>
                    <dd class="col-sm-9">
                        @if (!string.IsNullOrEmpty(Model.ImageUrl))
                        {
                            <img src="@Model.ImageUrl"
                                 class="rounded border"
                                 style="width: 150px; height: 120px; object-fit: cover;" />
                        }
                    </dd>
                </dl>

                <form asp-action="Delete" asp-controller="RecipeUi" method="post" class="d-flex justify-content-center mt-4">
                    <input type="hidden" asp-for="Id" />
                    <a asp-action="Index" class="btn btn-outline-secondary mx-1">Cancel</a>
                    <button type="submit" class="btn btn-danger px-4 mx-1">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>
