<body>
    <div class="login-container">
        <!-- Left Side: Illustration -->
        <div class="illustration-panel">
            <img src="~/Images/student-avatar.jpg" alt="Illustration of a person working on a computer">
        </div>

        <!-- Right Side: Login Form -->
        <div class="form-panel">
            <div class="login-box">
                <h1>Hello!</h1>
                <p>Sign In to Get Started</p>

                <form asp-controller="Auth" asp-action="Login" method="post">
                    @Html.AntiForgeryToken()

                    <!-- This div will display the "Invalid email or password" error -->
                    <div asp-validation-summary="ModelOnly" class="text-danger" style="margin-bottom: 15px;"></div>

                    <!-- Email Input -->
                    <div class="input-group">
                        <i class="fas fa-envelope"></i>
                        <input asp-for="Email" class="form-control" placeholder="Email Address" />
                    </div>
                    <span asp-validation-for="Email" class="text-danger"></span>

                    <!-- Password Input -->
                    <div class="input-group" style="margin-top: 20px;">
                        <i class="fas fa-lock"></i>
                        <input asp-for="Password" class="form-control" placeholder="Password" />
                    </div>
                    <span asp-validation-for="Password" class="text-danger"></span>

                    <!-- Login Button -->
                    <button type="submit" class="login-btn">Login</button>

                    <!-- Forgot Password Link -->
                    <a href="#" class="forgot-password">Forgot Password?</a>
                </form>
            </div>
        </div>
    </div>
</body>
</html>